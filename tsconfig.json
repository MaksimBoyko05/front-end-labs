{
  "compilerOptions": {
    "outDir": "./src/web",   // Директорія для вихідних файлів JavaScript
    "rootDir": "./src/dist", // Директорія з TypeScript файлами
    "target": "es2016",  // Цільова версія JavaScript
    "module": "commonjs",// Модульна система
    "strict": true,      // Увімкнення суворого режиму
    "esModuleInterop": true, // Дозвіл на імпорт модулів CommonJS
    "skipLibCheck": true, // Пропуск перевірки бібліотечних файлів
    "forceConsistentCasingInFileNames": true // Забезпечення коректності реєстру в іменах файлів
  },
  "include": ["src/dist/**/*.ts"], // Включаємо всі файли .ts з директорії dist
  "exclude": ["node_modules"]  // Виключаємо node_modules
}
